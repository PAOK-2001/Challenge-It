<?xml version="1.0"?>
<launch>

    <!--Load mesh model -->
    <arg name="urdf_model" value="$(find pendelum_sim)/urdf/pendulum.urdf"/>
    <param name="robot_description" command="cat $(arg urdf_model)" />

    <!--Robot State Publisher -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="pendelum_state_pub" >
    </node>

    <arg name="rvizconfig" default="$(find pendelum_sim)/rviz/manipulator.rviz" />
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" /> 
    <node name="pendulum" pkg="pendelum_sim" type="pendelum_sim.py" output="screen"/>


</launch>